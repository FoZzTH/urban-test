{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "lib": ["es2015"],
  "exclude": ["node_modules", "**/*.spec.ts", "__mocks__", "jest.config.ts"]
}
